@page "{resturantId:int}"
@model OdeToFood.Pages.Resturants.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h2>@Model.Resturant.Name</h2>
<div>
    Id: @Model.Resturant.Id
</div>
<div>
    Location: @Model.Resturant.Location
</div>
<div>
    Cuisene: @Model.Resturant.Cuisine
</div>
@if(Model.Message!=null)
{
    <div class="alert alert-info">
        @Model.Message
    </div>
}
<div>
    <a asp-page="./List" class="btn btn-secondary">All Resturants</a>
</div>
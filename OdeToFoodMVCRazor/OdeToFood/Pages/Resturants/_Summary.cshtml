@using OdeToFood.Core
@model Resturant

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisene: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-info" asp-page="./Details" asp-route-resturantId="@Model.Id">
            Details
        </a>
        <a class="btn btn-dark" asp-page="./Edit" asp-route-resturantId="@Model.Id">
            Edit
        </a>
        <a class="btn btn-danger" asp-page="./Delete" asp-route-resturantId="@Model.Id">
            Delete
        </a>
    </div>
</div>